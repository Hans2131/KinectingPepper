<UserControl x:Class="Kinect_ing_Pepper.UI.SkeletonViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kinect_ing_Pepper.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             BorderThickness="1" BorderBrush="Black">
    <Grid Background="Black">
        <Viewbox Margin="0,0,0,0">
            <Image Name="camera" Source="{Binding KinectImage}" Stretch="UniformToFill"/>
            <!--<Canvas Name="canvasSkeleton" />-->
        </Viewbox>
        <Label Name="lblImageType" Content="{Binding FPSDescription}" Foreground="DarkCyan" FontSize="20" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.702,-1.913"/>
    </Grid>
</UserControl>
